{% extends 'layout.html.twig' %}

{% block body %}
        <div id="main">
            <section id="one">
                <div class="">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <h3>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</h3>
                    {% else %}
                        <p>non connect√©</p>
                    {% endif %}
                </div>
            </section>
            <section id="two">
                <div>
                    {% block fos_user_content %}
                    {% endblock fos_user_content %}
                </div>

                <div class="right">
                    <ul>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <li>
                                <a href="{{ path('fos_user_security_logout') }}" class="waves-effect waves-light btn orange darken-4">
                                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                </a>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{ path('fos_user_security_login') }}">Se connecter</a>
                            </li>
                        {% endif %}
                        <li>
                            <a class="waves-effect waves-light btn red darken-4" href="{{ path('fos_user_registration_register') }}">
                                S'enregistrer
                            </a>
                        </li>
                    </ul>
                </div>
                {% block button %}
                {% endblock %}
            </section>
        </div>
{% endblock %}


{% block javascripts %}

{% endblock %}

