{% extends 'layout.html.twig' %}

{% block body %}

    <div id="main">

        <section id="one">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <h3>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</h3>
                {% else %}
                    <p>non connect√©</p>
                {% endif %}
        </section>

        <section id="two">

            {% block fos_user_content %}
            {% endblock fos_user_content %}

            {% block button %}
            {% endblock %}
        </section>
        <section id="three">

            <div class="">
                <ul>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}" class="button primary">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('fos_user_security_login') }}" class="button primary">Se connecter</a>
                        </li>
                    {% endif %}
                    <li>
                        <a class="button" href="{{ path('fos_user_registration_register') }}">
                            S'enregistrer
                        </a>
                    </li>
                </ul>
            </div>

        </section>

    </div>

{% endblock %}