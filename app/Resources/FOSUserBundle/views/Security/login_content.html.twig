{% extends '@FOSUser/layout.html.twig' %}

{% block body %}

    {% trans_default_domain 'FOSUserBundle' %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

        {# ADMIN CONNEXION FORM #}

            <form action="{{ path("fos_user_security_check") }}" method="post">

                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div>
                    <label for="username">Nom d'utilisateur</label>
                    <input class="input-size" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
                    <div>
                <input class="input-size"type="password" id="password" name="_password" required="required" />
                </div>
                <div>
                    <input class="input-size" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">Se souvenir de moi</label>
                </div>

                {% block button %}
                <button class="btn-floating btn-large waves-effect waves-light green darken-1 tooltipped"
                        type="submit"
                        id="_submit"
                        name="_submit"
                        value="{{ 'security.login.submit'|trans }}"
                        data-position="bottom"
                        data-delay="50"
                        data-tooltip="Enregistrer">
                    <i class="material-icons">Connexion</i>
                </button>
                {% endblock %}
            </form>

{% endblock %}
