{% extends 'layout.html.twig' %}

{% block body %}

    <div id="main">

        <section id="one">
            <h1>Enregistrement du nouveau club</h1>
        </section>

        <section id="two">

            {{ form_start(form) }}
            <div class="col-6">
                <label for=" {{ form.clubName.vars.full_name }}" class="amber-text">Nom du club :</label>

                <input id="{{ form.clubName.vars.id }}"
                       name=" {{ form.clubName.vars.full_name }}"
                       type="text" class="validate amber-text" required="" >
                {{ form_errors(form.clubName) }}
                {% do form.clubName.setRendered %}
            </div>
            <input type="submit" value="Enregistrer" />
            {{ form_end(form) }}
            <a href="{{ path('clubs_index') }}" class="button">Retour Ã  la liste des clubs</a>

        </section>

    </div>

{% endblock %}
