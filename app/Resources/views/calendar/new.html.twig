{% extends 'layout.html.twig' %}

{% block body %}

    <div id="main">

        <section id="one">
            <h1>Nouveau match</h1>
        </section>

        <section id="two">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-6">
                        <div>
                            <p>Date et heure de match : </p>
                        </div>
                        <div>
                            {{ form_widget(form.start) }}
                            {{ form_errors(form.start) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div>
                            <p>Catégorie : </p>
                        </div>
                        <div>
