{% extends 'layout.html.twig' %}

{% block body %}

    <div id="main">

        <section id="one">
            <h1>Nouveau match</h1>
        </section>

        <section id="two">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-6">
                        <div>
                            <p>Date et heure de match : </p>
                        </div>
                        <div>
                            {{ form_widget(form.start) }}
                            {{ form_errors(form.start) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div>
                            <p>Catégorie : </p>
                        </div>
                        <div>
                            {{ form_widget(form.category, { 'id': 'mySelect' }, { 'attr': {'onchange': 'myFunction("select")'} }) }}  <!-- , { 'attr': {'onchange': 'myFunction("select")'} } -->
                            {{ form_errors(form.category) }}
                        </div>
                        {#<div>#}
                            {#{{ form_widget(form.color, { 'type': 'color'}) }}#}
                            {#{{ form_errors(form.color) }}#}
                        {#</div>#}
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div>
                            <p>Niveau et poule : </p>
                        </div>
                        <div>
                            {{ form_widget(form.level) }}
                            {{ form_errors(form.level) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div>
                            <p>Club Domicile : </p>
                        </div>
                        <div>
                            {{ form_widget(form.club1) }}
                            {{ form_errors(form.club1) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div>
                            <p>Club extérieur : </p>
                        </div>
                        <div>
                            {{ form_widget(form.club2) }}
                            {{ form_errors(form.club2) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div>
                            <p>Lieu de rencontre : </p>
                        </div>
                        <div>
                            {{ form_widget(form.address) }}
                            {{ form_errors(form.address) }}
                        </div>
                    </div>
                </div>
        </section>

        <section id="three">
            <div class="inline">
                <input type="submit" value="Enregistrer" class="buttonNew" />
                {{ form_end(form) }}

                <a href="{{ path('fullcalendar_index') }}" class="button">Retour au calendrier</a>
            </div>
        </section>

    </div>

{% endblock %}
