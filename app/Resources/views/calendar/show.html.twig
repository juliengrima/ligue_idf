{% extends 'base.html.twig' %}

{% block body %}
    <h1>Calendar</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ calendar.id }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if calendar.start %}{{ calendar.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if calendar.end %}{{ calendar.end|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('calendar_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('calendar_edit', { 'id': calendar.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
