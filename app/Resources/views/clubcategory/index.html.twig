{% extends 'layout.html.twig' %}

{% block body %}

    <div id="main">
        <h1>Clubcategories list</h1>

        <table>
            <thead>
                <tr>
                    <th>Club</th>
                    <th>Categories</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for clubCategory in clubCategories %}
                <tr>
                    <td>{{ clubCategory.club }}</td>
                    <td>{{ clubCategory.categories }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('clubcategory_edit', { 'id': clubCategory.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('clubcategory_new') }}">Create a new clubCategory</a>
            </li>
        </ul>
    </div>

{% endblock %}
